  "version": "0.2.0",
  "configurations": [
    {
      "name": "AWS BFF",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "tsx",
      "args": ["watch", "src/index.ts"],
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": ["**", "!**/node_modules/**"],
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}