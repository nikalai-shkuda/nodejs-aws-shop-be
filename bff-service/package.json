{
  "name": "bff-service",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "start": "tsx watch src",
    "start:prod": "node dist/index.js",
    "docker:build": "docker build -t bff-api .",
    "docker:run": "docker run --rm --env-file .env -p 4000:4000 bff-api",
    "ebs:deploy": "eb deploy develop"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "dotenv": "^16.5.0",
    "fastify": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  }
}
